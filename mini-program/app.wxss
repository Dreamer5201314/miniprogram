@import "colorui/main.wxss";
@import "colorui/icon.wxss";
/**app.wxss**/
page {
  background-color: #F8F8F8;
  font-size: 32rpx;
  font-family: PingFang SC, Helvetica Neue, Hiragino Sans GB, Helvetica, Microsoft YaHei, Arial;
}

/* 顶部按钮 */
.publick_btn_list {
  background-color: #f3f6fd;
  position: sticky;
  top: 0;
  padding: 10rpx 30rpx 8rpx;
  display: flex;
  justify-content: space-around;
  border: 2rpx solid #eeeeee;
  z-index: 99;
}

.publick_btn_item {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
}

.publick_btn_item .image {
  margin: 0 auto;
  width: 60rpx;
  height: 60rpx;
  display: block;
}
.publick_btn_item .text {
  font-size: 30rpx;
}


/* list-item */
.publick_list{
  position: fixed;
  top: 50%;
  transform: translateY(-53%);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  font-weight: 600;
}

.publick_item{
  background-color: white;
  width: 40vw;
  height: 40vw;
  margin: 20rpx;
  text-align: center;
  border-radius: 30%;
  border: 8rpx solid rgb(202, 217, 245)
}

.publick_img{
  width: 70%;
  height: 70%;
  display: block;
  margin: 8% auto 0;
}

.publick_txt{
  font-size: 14px;
  color: #666666;
}


/* 录音按钮 */
.publick_btn_box { /* 按钮盒子 */
  width: 100vw;
  position: fixed;
  bottom: 3vh;
  display: flex;
  justify-content:center;
}
.publick_record { /* 录音按钮 */
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  padding: 10rpx;
  border: 2rpx solid #666666;
  position: relative;
}
.publick_record image {
  width: 100%;
  height: 100%
}

.text_box{
  font-size: 15px;
  border-radius: 5%;
}